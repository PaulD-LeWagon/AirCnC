<div class="container min-vh-100">

  <div class="row justify-content-center">
    <div class="col-12 col-sm-6">
    <h2 class="my-5 display-3">Log in</h2>
      <div class="p-4 border rounded">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "shaddow-sm"}) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        class: "form-control",
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="d-flex justify-content-end">
            <%= f.button :submit, "Log in", class: "btn btn-success" %>
          </div>
        <% end %>
        <div class="devise-signup-links"><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>

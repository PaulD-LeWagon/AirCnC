<div class="container col-10">

  <%# //  '<i class="fa-solid fa-square-check"></i>' : '<i class="fa-solid fa-bomb"></i>' %>

  <div class="display-1 mt-5 mb-3 px-2 d-flex justify-content-between align-items-center">

    <h1 class="h-100 m-0"><%= @vehicle.make %> <%= @vehicle.model %></h1>

    <h2 class="h-100 m-0">
      <small>from £</small><span class="fst-italic"><%= sprintf("%.2f", @vehicle.price_per_day) %> </span><small>a day</small>
    </h2>

  </div>

  <div class="shadow p-3">

    <img class="w-100" src="<%= @vehicle.image_url %>" alt="<%= @vehicle.make %> <%= @vehicle.model %>">

    <div class="d-flex justify-content-between align-items-start">

      <div>
        <div class="display-5 mt-3 mb-1 px-2">
          <h3 class="h-100 m-0"><%= @vehicle.make %> <%= @vehicle.model %></h3>
        </div>
        <ul class="list-group  list-group-flush mt-3" style="margin-right: 20px;">
          <li class="list-group-item">
            <span class="bold">Price:</span> <small>from £</small><span class="fst-italic"><%= sprintf("%.2f", @vehicle.price_per_day) %> </span><small>a day</small>
          </li>
          <li class="list-group-item">
            <span class="bold">Year:</span> <%= @vehicle.year %>
          </li>
          <li class="list-group-item">
            <span class="bold">Colour:</span> <%= @vehicle.colour %>
          </li>
          <li class="list-group-item">
            <p class="">
              <span class="bold">Description:</span>
              <br>
              <%= @vehicle.description %>
            </p>
          </li>
        </ul>
      </div>

      <% if @show_hire_form %>

        <%= render partial: 'shared/form_rental', locals: { vehicle: @vehicle, rental: @rental } %>

      <% else %>

        <div class="p-2 h-100 d-flex justify-content-center align-items-center">

          <% if @show_cancel_button %>

            <%= link_to 'Delete Booking?', rental_path(@rental), class: "btn btn-success text-nowrap align-self-end", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

          <% elsif !user_signed_in? %>

            <%= link_to 'Hire Me?', new_user_session_path, class: "btn btn-success text-nowrap align-self-end" %>

          <% end %>

        </div>

      <% end %>

    </div>

  </div>



</div>

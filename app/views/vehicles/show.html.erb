<div class="container" style="border: 1px solid #ccc; padding: 10px; margin-top: 30px;">
  <div class="d-flex">
    <img src="<%= @vehicle.image_url %>" class="img-fluid rounded-start" alt="<%= @vehicle.make %> <%= @vehicle.model %>">
    <div>
      <div class="d-flex justify-content-between align-items-center" style="border: 1px solid #ccc; padding: 10px;">
  <h3 class="card-title m-0"><%= @vehicle.make %> <%= @vehicle.model %></h3>
  <p class="lead m-0" style="margin-left: 20px;">from Â£<%= sprintf("%.2f", @vehicle.price_per_day) %> a day</p>
</div>
      <ul class="list-group list-group-flush mt-3">
        <li class="list-group-item">Year: <%= @vehicle.year %></li>
        <li class="list-group-item">Colour: <%= @vehicle.colour %></li>
        <li class="list-group-item">
          <p class="lead"><%= @vehicle.description %></p>
        </li>
      </ul>
      <hr>

      <% if @hide_hire_button %>
      <!-- Cancel Booking Button Here. -->
      <% else %>
      <div class="d-flex justify-content-end">
        <%= link_to "Hire Me?", new_vehicle_rental_path(@vehicle), class: "btn btn-success btn-lg" %>
      </div>
      <% end %>

    </div>
  </div>
</div>

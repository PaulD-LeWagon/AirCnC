<div class="container min-vh-100">

  <div class="row justify-content-center">

    <div class="col-12 col-sm-6">

    <h2 class="my-5 display-3">Rent Your Vehicle</h2>

      <div class="container mt-5">


        <%= form_with model: @vehicle, local: true, class: "form shadow border rounded-3 p-4" do |form| %>

          <div class="mb-3">
            <%= form.label :make, class: "form-label" %>
            <%= form.text_field :make, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :model, class: "form-label" %>
            <%= form.text_field :model, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :year, class: "form-label" %>
            <%= form.number_field :year, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :price_per_day, class: "form-label" %>
            <%= form.number_field :price_per_day, step: 0.01, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :colour, class: "form-label" %>
            <%= form.text_field :colour, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :location, class: "form-label" %>
            <%= form.text_field :location, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :image_url, class: "form-label" %>
            <%= form.text_field :image_url, class: "form-control" %>
          </div>

          <div class="mt-4 d-flex justify-content-end">
            <%= form.submit 'Add your vehicle?', class: "btn btn-success" %>
          </div>

        <% end %>

      </div>

    </div>
  </div>
</div>

<% today = Date.today %>
<%= simple_form_for [vehicle, rental], html: {
  id: "hire-form",
  class: "aircnc-form mt-3 p-5 w-50 border rounded-3 animate-shadow",
  data: {
    controller: "datepicker",
    action: "datepicker#onSubmit",
    "datepicker-target": "form",
    "datepicker-charge-value": "#{vehicle.price_per_day.to_f}"
} } do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :hire_start_date,
                html5: true,
                required: true,
                input_html: {
                  id: "dp-start-date",
                  class: "form-control",
                  min: "#{today + 1}",
                  required: true,
                  data: {
                    action: "change->datepicker#onDPChange",
                    "datepicker-target": "startDate"
                  } } %>

    <%= f.input :hire_end_date,
                html5: true,
                required: true,
                input_html: {
                  id: "dp-end-date",
                  class: "form-control",
                  min: "#{today + 2}",
                  required: true,
                  data: {
                    action: "change->datepicker#onDPChange",
                    "datepicker-target": "endDate"
                  } } %>

    <%= f.input :charge,
                as: :string,
                readonly: true,
                input_html: {
                  id: "charge",
                  class: "form-control",
                  data: {
                    "datepicker-target": "charge"
                  } } %>

  </div>

  <div class="form-actions d-flex justify-content-end">
    <%= f.button :submit, "Hire Now?", id: "form-submit", class: "btn btn-success" %>
  </div>

<% end %>
